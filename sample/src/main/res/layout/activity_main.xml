<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:connection_indicator="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="32dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.stustirling.connectionindicator.sample.MainActivity">

    <Button
        android:text="Toggle Searching"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ma_start"
        android:layout_width="200dp"
        android:layout_marginBottom="16dp"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tb_ma_on"
        android:textOff="All Off"
        android:textOn="All On"
        android:layout_marginBottom="24dp"/>

    <com.stustirling.connectionindicator.ConnectionIndicatorView
        android:id="@+id/ci_ma_one"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        connection_indicator:emptyBarColor="@color/off"
        connection_indicator:solidSearchBarColor="@android:color/white"
        connection_indicator:bars="4"
        connection_indicator:animType="incremental"
        connection_indicator:connectionLevels="4"/>

    <com.stustirling.connectionindicator.ConnectionIndicatorView
        android:id="@+id/ci_ma_two"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        connection_indicator:emptyBarColor="@color/off"
        connection_indicator:solidSearchBarColor="@android:color/white"
        connection_indicator:bars="6"
        connection_indicator:animType="incremental"
        connection_indicator:connectionLevels="6"/>

    <com.stustirling.connectionindicator.ConnectionIndicatorView
        android:id="@+id/ci_ma_three"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        connection_indicator:emptyBarColor="@color/off"
        connection_indicator:solidSearchBarColor="@android:color/white"
        connection_indicator:bars="5"
        connection_indicator:animType="incremental"
        connection_indicator:connectionLevels="2"/>

    <com.stustirling.connectionindicator.ConnectionIndicatorView
        android:id="@+id/ci_ma_four"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        connection_indicator:emptyBarColor="@color/off"
        connection_indicator:solidSearchBarColor="@android:color/white"
        connection_indicator:bars="3"
        connection_indicator:animType="flash"
        connection_indicator:connectionLevels="3"/>

    <com.stustirling.connectionindicator.ConnectionIndicatorView
        android:id="@+id/ci_ma_five"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginBottom="16dp"
        connection_indicator:emptyBarColor="@color/off"
        connection_indicator:solidSearchBarColor="@android:color/white"
        connection_indicator:bars="5"
        connection_indicator:animType="flash"
        connection_indicator:connectionLevels="5"/>

</LinearLayout>
